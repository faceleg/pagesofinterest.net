<div class="mb-3 d-flex align-items-center latest-post-container">
  {% if post.image %}
  <div>
    <a href="{{post.url}}">
      {% picture picture-thumbnail-small {{ post.image }} --alt {{ post.title | escape }} --picture class="w-100 latest-post-image-small" %} 
      {% picture picture-thumbnail-large {{ post.image }} --alt {{ post.title | escape }} --picture class="w-100 latest-post-image-large" %}
    </a>
  </div>
  {% endif %}
  <div class="col-9">
    <h2 class="mb-2 h6 font-weight-bold">
      <a class="text-dark" href="{{post.url}}">{{ post.title }}</a>
    </h2>
    <small class="d-block text-muted">
      In
      <span class="catlist">
        {% for category in post.categories %}
        <a
          class="text-capitalize text-muted smoothscroll"
          href="/category/{{ category | downcase }}"
          >{{ category }}</a
        >
        <span class="sep">, </span>
        {% endfor %}
      </span>
    </small>
    <small class="text-muted"> {{ post.date | date: '%b %d, %Y' }} </small>
  </div>
</div>
